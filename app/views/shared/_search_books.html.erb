<div class="logo-corner">
  <%= link_to root_path do %>
    <h1 class="logo-small">BOOK CLUB</h1>
  <% end %>
</div>

<div class="container-search">  
  <% if flash[:alert] %>
    <div class="alert alert-warning"><%= flash[:alert] %></div>
  <% end %>
  <%= form_with(url: search_path, method: 'get', local: true) do %>
    <div class="form-group">            
        <% label_tag :books, 'Search for a book '%>
        <%= text_field_tag :books, nil, placeholder: 'Search by title, author, ISBN etc.', class: 'form-control' %>
    </div>
      <% button_tag 'Search', class: 'btn btn-success btn-block' %>
  <% end %>
</div>
<div class="seperator-container">
  <div class="seperator-one"></div>
  <div class="seperator-two"></div>
  <div class="seperator-three"></div>
</div>