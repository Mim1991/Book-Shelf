<%# Changes message id for js search to display on screen %>
<div class="message-container" id="message-<%= message.id %>">
  <%if message.user.photo.attached? %>
    <%= cl_image_tag(message.user.photo.key, class:"review-image friend-image image-small")%>
  <% else %>
    <%= image_tag("user.png", class:"review-image friend-image image-small")%>
  <% end %>

  <div class="message-headline">  

    <p><i class="author-message">
      <span><%= message.user.first_name %></span>
      <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
    </i></p>
  
    <p><%= message.content %></p>
  </div>
</div>