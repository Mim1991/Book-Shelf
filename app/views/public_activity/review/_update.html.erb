<% if activity.trackable %>  
  <% book =  Book.find(activity.trackable.book_id) %>
  <% user = User.find(book.user_id) %>
  <%=link_to user.first_name, user %>
  updated their review for <%= link_to book.name, book_path(book.code)  %> with the title
  <%= activity.trackable.title %>
<% else %>
  <%= activity.trackable.user.first_name %> write a review for a book but has since been removed
<% end %>