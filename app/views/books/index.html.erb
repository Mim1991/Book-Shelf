<%
=begin  %>
<div class="wrapper-index">
  <%= render "shared/search_books" %>
  <%= render "shared/navbar" %>
  <div class="book-list">
    <div class="book-featured">
      <div class="featured-text">
        <h2>FEATURED <br> BOOKS</h2>
        <p>Take a look at some of the books that have recently been added to people's library</p>
      </div>
      
      <div class="book-featured-covers">
        <% @book_parsed.reverse.each do |book| %>
          <%= link_to book_path(book["id"]) do %>
            <%= image_tag(book["volumeInfo"]["imageLinks"]["thumbnail"], class:"cover-small") %>  
          <% end %>
        <% end %>
      </div>     
    </div>

    <div class="book-featured top-featured-mt">
      <div class="featured-text">
        <h2>TOP SHELF <br> BOOKS</h2>
        <p>These are a sample selection of books that have been added to people's Top Shelf</p>
      </div>
      
      <div class="book-featured-covers">
        <% @top_books.each do |book| %>
          <%= link_to book_path(book["id"]) do %>
            <%= image_tag(book["volumeInfo"]["imageLinks"]["thumbnail"], class:"cover-small") %>  
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="seperator-container sep-midpage">
      <div class="seperator-one sep-one-alt"></div>
      <div class="seperator-two sep-two-alt"></div>
      <div class="seperator-three sep-three-alt"></div>
  </div>
</div>
<%
=end %>

<div class="wrapper-index">
  <%= render "shared/search_books" %>
  <%= render "shared/navbar" %>

  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="search-results book-show-layout book-index-text">
    <div class="image-headline">
      <%= image_tag("world.png", class:"travel-image travel-img-left")%>
      <h3><em>"IF YOU DON'T LIKE TO READ, YOU HAVEN'T FOUND THE RIGHT BOOK YET"</em> <br> - J.K Rowling</h3>
      <%= image_tag("world3.png", class:"travel-image travel-img-right")%>
    </div>
    <div class="featured-title">
        <h2>Books of The Month</h2>
        <p>A selection of popular books that have most recently been added to people's library. </p>
      </div>
      <div class="carousel-inner carousel-card-style">
        <% @book_parsed.reverse.each_with_index do |book,i|%>
          <div class="carousel-item <%= "active " if i==0 %>"">
            <div class="carousel-layout book-search-card">
              <div class="search-img">
                <%= link_to book_path(book["id"]) do %>
                  <% if book["volumeInfo"]["imageLinks"] != nil %>
                    <%= image_tag(find_image(book), class:"book-cover-search")%>
                  <% else %>
                    <%= image_tag("no_image.jpg", class:"book-cover-search")%>
                  <% end %>
                <% end %>
              </div>
              <div class="search-text">
                <div class="book-headline">
                  <%= link_to book_path(book["id"]) do %>
                    <h3><%= find_title(book) %> </h3>
                  <% end %>
                  <p><em><%= find_author(book) %></em></p>
                  <p><%= Sanitize.fragment(shorten_sentence(find_description(book))) %></p>
                </div>
              </div>
            </div>
          </div>
        <% end%>
      </div>
    </div>
    <a class="carousel-control-prev arrow-style" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next arrow-style arrow-right" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  



</div>
